<%- include("header.ejs") -%>

    <div class="box" id="heading">
        <h1><%=kindOfDay%></h1>

    </div>

    <div class="box"> 
        <% newListItem.forEach(function(item){ %>
            
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" onchange="this.form.submit()" value="<%=item._id%>" name="checkbox">
                    <p><%=item.name  %></p>
                </div>
                <input type="hidden" name="listName" value="<%=kindOfDay%>"> 
            </form>
            
        <% })%>

<form class="item" action="/" method="post">
    <input type="text" name="newItem"  placeholder="Add item" autocomplete="off">
    <button type="submit" name="list" value="<%=kindOfDay%>">+</button>
</form>

</div>

<%- include("footer.ejs") -%>
